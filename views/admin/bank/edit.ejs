<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Bank</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item"><a href="/bank">Bank</a></li>
						<li class="breadcrumb-item active">Edi</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Edit Bank</h3>
						</div>
						<form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
							<div class="card-body">
                <div class="form-group">
									<label for="name">Account Name</label>
									<input type="text" value="<%= bank.name %>" class="form-control" id="name" name="name" placeholder="Enter account name..." required>
								</div>
								<div class="form-group">
                  <label>Bank</label>
                  <select class="form-control select2" style="width: 100%;" name="bankName">
                    <option value="BRI" <% if(bank.bankName === 'BRI'){%> selected <%}%> >BRI</option>
                    <option value="Mandiri" <% if(bank.bankName === 'Mandiri'){%> selected <%}%>>Mandiri</option>
                    <option value="BCA" <% if(bank.bankName === 'BCA'){%> selected <%}%>>BCA</option>
                    <option value="BNI" <% if(bank.bankName === 'BNI'){%> selected <%}%>>BNI</option>
                    <option value="BTN" <% if(bank.bankName === 'BTN'){%> selected <%}%>>BTN</option>
                    <option value="Danamon" <% if(bank.bankName === 'Danamon'){%> selected <%}%>>Danamon</option>
                    <option value="Permata" <% if(bank.bankName === 'Permata'){%> selected <%}%>>Permata</option>
                    <option value="CIMB Niaga" <% if(bank.bankName === 'CIMB Niaga'){%> selected <%}%>>CIMB NIAGA</option>
                    <option value="MUAMALAT" <% if(bank.bankName === 'MUAMALAT'){%> selected <%}%>>MUAMALAT</option>
                  </select>
                </div>
                <div class="form-group">
									<label for="noRekening">No Rekening</label>
									<input type="number" value="<%= bank.noRekening %>" class="form-control" id="noRekening" name="noRekening" placeholder="Enter no Rekening..." required>
								</div>
							</div>
							<div class="card-footer">
								<button type="submit" class="btn btn-primary">Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>