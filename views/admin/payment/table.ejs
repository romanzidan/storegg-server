<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Type</th>
      <th>Banks</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i < payment.length; i++){ %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => { %>
        <span class="badge badge-warning">
          <%= bank.nameBank %> - <%= bank.name %> - <%= bank.noRekening %>
        </span>
        <% }) %>
      </td>
      <td>
        <% if(payment[i].status === 'Y'){ %>
        <span class="badge badge-success">
          Active
        </span>
        <% }else{%>
        <span class="badge badge-danger">
          Inactive
        </span>
        <% } %>
      </td>
      <td>
        <form action="/payment/status/<%= payment[i]._id %>?_method=PUT" method="POST" class="d-inline-block">
          <% if(payment[i].status === 'Y'){ %>
          <button class="btn btn-primary">
            <i class="fas fa-eye-slash"></i> 
            Inactive
          </button>
          <% }else{%>
            <button class="btn btn-primary">
              <i class="fas fa-eye"></i> 
              Active
            </button>
          <% } %>
        </form>
        <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-info">
          <i class="nav-icon fas fa-pencil-alt"></i>
          Edit
        </a>
        <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="POST" class="d-inline-block">
          <button class="btn btn-danger">
            <i class="nav-icon fas fa-trash-alt"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
  <tfoot>
    <tr>
      <th>No.</th>
      <th>Type</th>
      <th>Banks</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </tfoot>
</table>