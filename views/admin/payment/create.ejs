<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Payment</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item"><a href="/payment">Payment</a></li>
						<li class="breadcrumb-item active">Create</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Create Payment</h3>
						</div>
						<form action="/payment/create" method="POST">
							<div class="card-body">
								<div class="form-group">
									<label for="type">Type</label>
									<input type="text" class="form-control" id="type" name="type" placeholder="Enter type..." required>
								</div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                  <select 
                  class="form-control select2" 
                  data-placeholder="Select Bank"
                  multiple="multiple" 
                  style="width: 100%;" 
                  name="banks" required>
                    <% banks.forEach(bank=>{ %>
                      <option value="<%= bank._id %>"><%= bank.nameBank %> - <%= bank.name %> - <%= bank.noRekening %></option>
                    <% }) %>
                  </select>
                </div>
							</div>
							<div class="card-footer">
								<button type="submit" class="btn btn-primary">Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>